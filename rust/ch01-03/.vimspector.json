{
    "configurations": {
        "Rust Launch": {
            "adapter": "CodeLLDB",
            "filetypes": [ "cpp", "c", "objc", "rust" ],
            "configuration": {
                "request": "launch",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "cwd": "${workspaceRoot}",
                "program": "${workspaceRoot}/target/debug/hello_cargo"
            },
            "breakpoints": {
                "exception": {
                    "cpp_throw": "Y",
                    "cpp_catch": "N"
                }
            }
        }
    }
}
